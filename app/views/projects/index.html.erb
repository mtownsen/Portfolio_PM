<p id="notice"><%= notice %></p>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Project list</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Home</a>
      </li>
      <li class="active">
          <strong>Project list</strong>
      </li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">
        <div class="ibox">
            <div class="ibox-title">
                <h5>All projects assigned to this account</h5>
                <div class="ibox-tools">
                    <%= link_to 'New Project', new_project_path, class:"btn btn-primary btn-xs" %>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row m-b-sm m-t-sm">
                    <div class="col-md-1">
                        <%= link_to(projects_path, id:"loading-example-btn", class:"btn btn-white btn-sm") do %>
                          <i class="fa fa-refresh"></i> Refresh 
                        <% end %>
                    </div>
                    <div class="col-md-11">
                        <div class="input-group">
                            <input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                    </span>
                        </div>
                    </div>
                </div>
                <div class="project-list">
                  <table class="table table-hover">
                      <tbody>
                        <% @projects.each do |project| %>
                          <tr>
                            <td class="project-status">
                                <span class="label label-primary">Active</span>
                            </td>
                            <td class="project-title">
                                  <a href="#"><%= project.name %></a>
                              <br />
                              <small><%= project.created_at.strftime("Created: %m/%d/%Y") %></small>
                            </td>
                            <td class="project-completion">
                                <small>Completion with: 28%</small>
                                <div class="progress progress-mini">
                                    <div style="width: 28%;" class="progress-bar"></div>
                                </div>
                            </td>
                            <td class="project-people">
                                <a href=""><img alt="image" class="img-circle" src="<%= image_path('a7.jpg') %>"></a>
                                <a href=""><img alt="image" class="img-circle" src="<%= image_path('a6.jpg') %>"></a>
                                <a href=""><img alt="image" class="img-circle" src="<%= image_path('a3.jpg') %>"></a>
                            </td>
                            <td class="project-actions">
                              <%= link_to(project_path(project), class:"btn btn-white btn-sm") do %>
                                <i class="fa fa-folder"></i> View 
                              <% end %>
                              <%= link_to(edit_project_path(project), class:"btn btn-white btn-sm") do %>
                                <i class="fa fa-pencil"></i> Edit 
                              <% end %>
                            </td>
                        </tr>
                      <% end %>
                </tbody>
              </table>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>